<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCompanyColumnPIC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="COMPANY"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/tvRecyclerCompanyPIC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRecyclerCompanyPIC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TEST"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvCompanyColumnPIC"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameColumnPIC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="FULL NAME"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/tvRecyclerNamePIC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyColumnPIC" />

    <TextView
        android:id="@+id/tvRecyclerNamePIC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Nama Saya Budi"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvNameColumnPIC"
        app:layout_constraintTop_toBottomOf="@id/tvRecyclerCompanyPIC" />

    <TextView
        android:id="@+id/tvNumberColumnPIC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="PHONE NUMBER"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/tvRecyclerNumberPIC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameColumnPIC" />

    <TextView
        android:id="@+id/tvRecyclerNumberPIC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="0811954477"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvNumberColumnPIC"
        app:layout_constraintTop_toBottomOf="@id/tvRecyclerNamePIC" />


</androidx.constraintlayout.widget.ConstraintLayout>